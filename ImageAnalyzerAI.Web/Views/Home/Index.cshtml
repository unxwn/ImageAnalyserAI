@model IEnumerable<ImageAnalyzerAI.Web.Models.ImageItem>
@{
    ViewData["Title"] = "Images Browser";
    var query = ViewData["Query"] ?? "";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Images Browser</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Images Browser</h1>
            <div>
                <a class="btn btn-primary" href="#uploadModal" data-bs-toggle="modal">Завантажити зображення</a>
            </div>
        </div>

        <form class="mb-3" method="get" action="@Url.Action("Index")">
            <div class="input-group">
                <input name="q" value="@query" class="form-control" placeholder="Пошук по імені файлу..." />
                <button class="btn btn-outline-secondary" type="submit">Пошук</button>
            </div>
        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="row g-3">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="@item.Url" class="card-img-top" style="height:220px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@System.Web.HttpUtility.HtmlEncode(item.BlobName)</h5>
                            <p class="card-text">
                                @if (item.Analyzed)
                                {
                                    <span>@(item.Description ?? "Без опису")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Аналіз в процесі...</span>
                                }
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">@item.UploadedAt.ToLocalTime().ToString("g")</small>
                                <a class="btn btn-sm btn-outline-primary" target="_blank" href="@item.Url">Переглянути</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Upload Modal -->
    <div class="modal fade" id="uploadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-action="Upload" enctype="multipart/form-data">
                    <div class="modal-header">
                        <h5 class="modal-title">Завантажити зображення</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <input type="file" name="File" class="form-control" accept="image/*" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Закрити</button>
                        <button class="btn btn-primary" type="submit">Завантажити</button>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
</body>
</html>
